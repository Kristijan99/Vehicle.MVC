@model Vehicle.MVC.Models.VehicleModelView
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Delete</h2>
                <h4>Are you sure you want to delete this?</h4>
            </div>
            <div class="modal-body" style="font-size:16px">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayName("Make name:")
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.VehicleMake.Name)
                    </dd>
                </dl>
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayName("Model name:")
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                </dl>
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayName("Abbreviation:")
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Abrv)
                    </dd>
                </dl>
            </div>
            <div class="modal-footer">
                @using (Html.BeginForm("Delete", "VehicleModel", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <button type="button" class="btn btn-primary"
                                onclick='window.location = "@Url.Action("Index", "VehicleModel")";'>
                            Back to List
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>