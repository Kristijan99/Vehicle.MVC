@model Vehicle.MVC.Models.VehicleModelView
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Create</h2>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Create", "VehicleModel", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <dl>
                            @Html.DropDownListFor(model => model.VehicleMakeId, Model.VehicleMakes, new { @class = "form-control" })
                        </dl>
                        <dl>
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Model name" } })
                        </dl>
                        <dl>
                            @Html.EditorFor(model => model.Abrv, new { htmlAttributes = new { @class = "form-control", @placeholder = "Abbreviation" } })
                        </dl>
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default"
                        onclick='window.location = "@Url.Action("Index", "VehicleModel")";'>
                    Back to List
                </button>
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>